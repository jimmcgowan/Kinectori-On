                        </Grid.ColumnDefinitions>

                    </Grid>
                    <!-- /MetronomeGrid -->

                    <Grid x:Name="ControlGrid" Background="DarkGray" Height="960" Width="960" Grid.Row="1" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
